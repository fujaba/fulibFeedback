{
  "name": "language-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/language-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/language-server",
        "format": ["cjs"],
        "bundle": true,
        "external": ["@nestjs/microservices", "class-transformer", "class-validator", "@nestjs/websockets"],
        "main": "apps/language-server/src/main.ts",
        "tsConfig": "apps/language-server/tsconfig.app.json",
        "assets": ["apps/language-server/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "outputPath": "dist/apps/vscode-client/server",
          "generatePackageJson": false,
          "minify": true,
          "thirdParty": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "language-server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "language-server:build:development"
        },
        "production": {
          "buildTarget": "language-server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/language-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/language-server/jest.config.ts"
      }
    }
  },
  "tags": []
}
