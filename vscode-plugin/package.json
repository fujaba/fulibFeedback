{
  "name": "fulibFeedback-language",
  "description": "Language support for fulibFeedback",
  "author": "Adrian Kunz",
  "publisher": "fujaba",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fujaba/fulibFeedback"
  },
  "categories": ["programming languages"],
  "identity": {
    "internalName": "org.fulib.feedback"
  },
  "overview": "./README.md",
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:markdown"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "fulibFeedback configuration",
      "properties": {
        "fulibFeedback.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "fulibFeedback.apiServer": {
          "scope": "window",
          "type": "string",
          "description": "The API server for annotations."
        },
        "fulibFeedback.assignment.id": {
          "scope": "window",
          "type": "string",
          "description": "The ID of the current assignment"
        },
        "fulibFeedback.assignment.token": {
          "scope": "window",
          "type": "string",
          "description": "The token for the current assignment"
        },
        "fulibFeedback.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "test": "sh ./scripts/e2e.sh"
  }
}
