{
  "name": "fulibFeedback",
  "description": "Language support for fulibFeedback",
  "author": "Adrian Kunz",
  "publisher": "fulib",
  "license": "MIT",
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fujaba/fulibFeedback"
  },
  "categories": [
    "programming languages"
  ],
  "identity": {
    "internalName": "org.fulib.feedback"
  },
  "overview": "./README.md",
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:markdown"
  ],
  "main": "./client/dist/main",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "fulibFeedback configuration",
      "properties": {
        "fulibFeedback.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "fulibFeedback.apiServer": {
          "scope": "window",
          "type": "string",
          "description": "The API server for annotations."
        },
        "fulibFeedback.codeSearch": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "description": "Use Code Search to automatically find snippets in other submissions and copy your evaluation."
        },
        "fulibFeedback.user.name": {
          "scope": "application",
          "type": "string",
          "description": "Your name for display in annotations"
        },
        "fulibFeedback.assignment.id": {
          "scope": "window",
          "type": "string",
          "description": "The ID of the current assignment"
        },
        "fulibFeedback.assignment.token": {
          "scope": "window",
          "type": "string",
          "description": "The token for the current assignment"
        },
        "fulibFeedback.solution.id": {
          "scope": "window",
          "type": "string",
          "description": "The ID of the current solution"
        },
        "fulibFeedback.solution.token": {
          "scope": "window",
          "type": "string",
          "description": "The token for the current solution"
        },
        "fulibFeedback.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm -C ./client run vscode:prepublish && pnpm -C ./server run vscode:prepublish",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "vsce": "^2.5.0"
  }
}
